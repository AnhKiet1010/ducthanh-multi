<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <title>Add Menu || Admin</title>
    <link rel="icon" href="/images/favicon.jpg" sizes="36x16">
</head>

<body>
    <div class="container">
        <!-- ADD MENU TO NAVBAR -->

        <h1 class="text-center mt-3">ADD MENU FORM</h1>
        <form action="/admin/menu" class="mt-2" method="POST">
            <div class="form-group">
                <label>Menu (NAVBAR)</label>
                <input type="text" name="menu_text" placeholder="">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>

        <!-- ADD SUB_MENU_LV1 -->

        <h1 class="text-center mt-3">ADD SUB MENU LV1 FORM</h1>
        <form action="/admin/sub_menu_lv1" class="mt-2" method="POST">
            <div class="form-group">
                <label>Sub Menu Level 1 Content</label>
                <input type="text" class="form-control" name="sub_menu_lv1_text">
            </div>
            <div class="form-group">
                <label>Parents List</label>
                <select name="parentsOfLv1">
                    <% list_parents1.forEach(function(item) {%>
                    <option value="<%= item._id %>"><%= item.text %></option>
                    <% }); %>
                </select>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>

        <!-- ADD SUB_MENU_LV2 -->

        <h1 class="text-center mt-3">ADD SUB MENU LV2 FORM</h1>
        <form action="/admin/sub_menu_lv2" class="mt-2" method="POST">
            <div class="form-group">
                <label>Sub Menu Level 2 Content</label>
                <input type="text" class="form-control" name="sub_menu_lv2_text">
            </div>
            <div class="form-group">
                <label>Parents List</label>
                <select name="parentsOfLv2">
                    <% list_parents2.forEach(function(item) {%>
                    <option value="<%= item._id %>"><%= item.text %></option>
                    <% }); %>
                </select>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</body>

</html>