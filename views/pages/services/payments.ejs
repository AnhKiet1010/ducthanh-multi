                        style="visibility: visible; animation-duration: 1.3s; animation-name: fadeInUp;">
                        <div class="conte">
                            <div class="conte-img">

                                <img src="<%= lang === 'cn' ? '/images/graphic_leftimg.257.png' :'/images/workflow_en.png' %>"
                                    alt="">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="first-area video-area section">
