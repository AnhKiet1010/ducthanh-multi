<div id="nav-header">
  <nav id="top" class="
      fixed
      w-full
      z-50
      top-0
      hidden
      lg:flex
      items-center
      justify-between
      flex-wrap
      py-3
      px-6
      animated
      fadeInDown
    ">
    <div class="
        flex
        items-center
        flex-shrink-0
        text-white
        animated fadeIn
        delay-1
      ">
      <img src="/img/logo_text.png" alt="ducthanhmultimedia-logo" class="w-20" />
    </div>
    <div class="text-md text-white uppercase hidden lg:block -ml-20">
      <a href="#responsive-header" class="
          block
          mt-4
          lg:inline-block lg:mt-0
          hover:opacity-80
          mr-4
          animated fadeIn
          delay-1
        ">
        <%= __('Trang Chủ') %>
      </a>
      <a href="#responsive-header" class="
          block
          mt-4
          lg:inline-block lg:mt-0
          hover:opacity-80
          mr-4
          animated fadeIn
          delay-2
        ">
        <%= __('Hình Ảnh') %>
      </a>
      <a href="#responsive-header" class="
          block
          mt-4
          lg:inline-block lg:mt-0
          hover:opacity-80
          mr-4
          animated fadeIn
          delay-3
        ">
        <%= __('Video') %>
      </a>
      <a href="#responsive-header" class="
          block
          mt-4
          lg:inline-block lg:mt-0
          hover:opacity-80
          mr-4
          animated fadeIn
          delay-4
        ">
        <%= __('Liên Hệ') %>
      </a>
    </div>
    <div class="relative hidden items-center lg:flex text-white">
      <a href="/change-lang/en" class="
          block
          text-sm
          cursor-pointer
          animated fadeIn
          delay-5
          <%=
          lang
          ==
          'en'
          &&
          'hidden'
          %>
        " role="menuitem" tabindex="-1" id="menu-item-0">EN</a>
      <a href="/change-lang/vi" class="
          block
          text-sm
          cursor-pointer
          <%=
          (lang
          ==
          'vi'
          ||
          lang
          ==
          undefined)
          &&
          'hidden'
          %>
        " role="menuitem" tabindex="-1" id="menu-item-1">VN</a>
    </div>
  </nav>
  <div class="fixed top-6 right-6 block lg:hidden z-50">
    <button class="flex items-center text-white cursor-pointer hover:opacity-80" id="menu-btn">
      <svg class="fill-current h-4 w-4" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
      </svg>
    </button>
  </div>
  <div class="
      menu-list
      fixed
      w-full
      h-screen
      z-20
      bg-gray-900 bg-opacity-90
      flex
      justify-center
      items-start
      hidden
      animated slideInLeft fast
    ">
    <ul class="mt-20">
      <li class="
          text-white text-xl
          my-3
          animated fadeIn
          delay-1
        ">
        <a href="/">
          <%= __('Trang Chủ') %>
        </a>
      </li>
      <li class="
          text-white text-xl
          my-3
          animated fadeIn
          delay-2
        ">
        <a href="/">
          <%= __('Hình Ảnh') %>
        </a>
      </li>
      <li class="
          text-white text-xl
          my-3
          animated fadeIn
          delay-3
        ">
        <a href="/">
          <%= __('Video') %>
        </a>
      </li>
      <li class="
          text-white text-xl
          my-3
          animated fadeIn
          delay-4
        ">
        <a href="/">
          <%= __('Liên Hệ') %>
        </a>
      </li>
    </ul>
    <button class="fixed z-50 top-6 right-6" id="close-btn">
      <img src="/img/close.svg" alt="close-btn" class="w-4 h-4 text-white" />
    </button>
  </div>
</div>